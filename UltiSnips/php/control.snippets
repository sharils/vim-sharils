snippet ca "case" b
case ${1:false}:
endsnippet

snippet cb "case break" b
case ${1:false}:
	break;
endsnippet

snippet cnb "case no break" b
case ${1:false}:
	// no break
endsnippet

snippet de "default" b
default:
	$1;
endsnippet

snippet e "else" "buffer[line-1][column:column+1] == '}'" be
} else {
	$1

endsnippet

snippet ei "elseif" "buffer[line-1][column:column+1] == '}'" be
} elseif (${1:false}) {

endsnippet

snippet ei "php elseif else" "buffer[line-1][column:column+14] == '<?php else: ?>'" be
<?php elseif (${1:false}): ?>
	$1

endsnippet

snippet ei "php elseif endif" "buffer[line-1][column:column+14] == '<?php endif ?>'" be
<?php elseif (${1:false}): ?>
	$1

endsnippet

snippet ibr "if break" b
if (${1:false}) {
	break;
}
endsnippet

snippet ic "if continue" b
if (${1:false}) {
	continue;
}
endsnippet

snippet if "if" b
if (${1:false}) {
}
endsnippet

snippet ir "if return" b
if (${1:false}) {
	return;
}
endsnippet

snippet pe "php else" b
<?php else: ?>
endsnippet

snippet pif "php if" b
<?php if (${1:false}): ?>
<?php endif ?>
endsnippet

snippet re "return" w
return $1;
endsnippet

snippet sw "switch" b
switch (${1:false}) {
}
endsnippet
